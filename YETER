    <script>
        // Aktif adÄ±mÄ± gÃ¶steren fonksiyon
        function showStep(stepId) {
            // TÃ¼m adÄ±mlarÄ± gizle
            document.querySelectorAll('.step').forEach(step => {
                step.classList.remove('active');
            });
            // Ä°stenen adÄ±mÄ± gÃ¶ster
            document.getElementById(stepId).classList.add('active');
        }

        // Bilmeceyi kontrol et
        function checkRiddle() {
            // BURAYI DEÄÄ°ÅTÄ°R: DoÄŸru cevabÄ± kÃ¼Ã§Ã¼k harflerle buraya yazÄ±n
            const dogruCevap = "limon kafe"; 
            const kullaniciCevabi = document.getElementById('riddle-input').value.toLowerCase().trim();
            const hataMesaji = document.getElementById('error-message');

            if (kullaniciCevabi === dogruCevap) {
                hataMesaji.style.display = 'none';
                showStep('step-2');
            } else {
                hataMesaji.style.display = 'block';
            }
        }

        // Final adÄ±mÄ±nÄ± gÃ¶ster ve kalpleri baÅŸlat
        function showFinalStep() {
            showStep('step-4');
            // Kalp yaÄŸmurunu baÅŸlat
            setInterval(createHeart, 200);
        }

        // Kalp oluÅŸturma fonksiyonu
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = (Math.random() * 2 + 3) + 's'; // 3-5 saniye arasÄ±
            heart.style.fontSize = (Math.random() * 1.5 + 1) + 'rem'; // FarklÄ± boyutlar
            
            const heartIcons = ['â¤ï¸', 'ğŸ’–', 'ğŸ’—', 'ğŸ’•', 'ğŸ’“'];
            heart.innerText = heartIcons[Math.floor(Math.random() * heartIcons.length)];
            
            document.body.appendChild(heart);
            
            // Kalp DOM'dan kaldÄ±r
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
    </script>

